#include <stdio.h>
#include <stdint.h>
#include "kameleon_js.h"

{{#modules}}
#define MODULE_{{nameUC}}_SIZE {{size}}
const char module_{{name}}_name[] = "{{name}}";
const size_t module_{{name}}_size = MODULE_{{nameUC}}_SIZE;
const uint8_t module_{{name}}_code[] = {
{{#segments}}
  {{#bytes}}0x{{value}}{{^last}}, {{/last}}{{/bytes}}
{{/segments}}
};

{{/modules}}
#define NATIVE_MODULES_SIZE {{modulesByRequire.length}}
const size_t native_modules_length = NATIVE_MODULES_SIZE;
const kameleon_js_module native_modules[] = {
{{#modulesByRequire}}
  { module_{{name}}_name, module_{{name}}_code, MODULE_{{nameUC}}_SIZE }{{^lastModule}}, {{/lastModule}}
{{/modulesByRequire}}
};
